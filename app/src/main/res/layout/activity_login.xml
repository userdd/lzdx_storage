<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dl_bg"
    android:orientation="vertical">
    <TextView
        android:visibility="gone"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="@dimen/textsize_18"
        android:textColor="@color/color_white"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/width_60"
                android:layout_height="@dimen/width_60"
                android:src="@mipmap/logo"/>
            <TextView
                android:layout_marginLeft="@dimen/width_20"
                android:gravity="center"
                android:layout_width="@dimen/width_170"
                android:layout_height="wrap_content"
                android:text="兰州大学后勤保障部智能仓储系统"
                android:textSize="@dimen/textsize_18"
                android:textColor="@color/color_white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/width_60"
            android:paddingLeft="@dimen/width_20"
            android:paddingRight="@dimen/width_20"
            android:paddingBottom="50dp"
            android:layout_marginLeft="@dimen/width_40"
            android:layout_marginRight="@dimen/width_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_frame">

            <EditText
                android:layout_marginTop="@dimen/width_35"
                android:id="@+id/login_admin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_30"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="请输入用户名"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_444444"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/textsize_14"
                android:drawableLeft="@mipmap/dl_yhm"
                android:drawablePadding="@dimen/width_10"/>
            <View
                android:layout_marginTop="@dimen/width_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_0_5"
                android:background="@color/color_444444"/>

            <EditText
                android:layout_marginTop="@dimen/width_10"
                android:id="@+id/login_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_30"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_444444"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/textsize_14"
                android:drawableLeft="@mipmap/dl_mm"
                android:drawablePadding="@dimen/width_10"/>
            <View
                android:layout_marginTop="@dimen/width_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_0_5"
                android:background="@color/color_444444"/>

            <TextView
                android:id="@+id/tv_login"
                android:paddingTop="@dimen/width_5"
                android:paddingBottom="@dimen/width_5"
                android:layout_marginTop="@dimen/width_40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textSize="@dimen/textsize_18"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:background="@drawable/shape_left_right"/>

            <TextView
                android:paddingLeft="@dimen/width_10"
                android:layout_marginTop="@dimen/textsize_10"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帮助?"
                android:textSize="@dimen/textsize_12"
                android:textColor="@color/color_999899" />
        </LinearLayout>
    </LinearLayout>
    <com.github.ybq.android.spinkit.SpinKitView
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp" />
</RelativeLayout>
