<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:paddingLeft="@dimen/width_15"
        android:paddingRight="@dimen/width_15"
        android:paddingTop="@dimen/width_25"
        android:paddingBottom="@dimen/width_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_frame">

        <TextView
            android:id="@+id/tv_title"
            android:gravity="center"
            android:paddingLeft="@dimen/width_60"
            android:paddingRight="@dimen/width_60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_30D3E2"/>
        <LinearLayout
            android:layout_marginTop="@dimen/width_50"
            android:background="@color/transparent"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ensure"
                android:paddingTop="@dimen/width_10"
                android:paddingBottom="@dimen/width_10"
                android:paddingLeft="@dimen/width_30"
                android:paddingRight="@dimen/width_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认"
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/color_white"
                android:background="@drawable/shape_frame_blue"/>
            <TextView
                android:id="@+id/tv_back"
                android:layout_marginLeft="@dimen/width_50"
                android:paddingTop="@dimen/width_10"
                android:paddingBottom="@dimen/width_10"
                android:paddingLeft="@dimen/width_30"
                android:paddingRight="@dimen/width_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/color_white"
                android:background="@drawable/shape_frame_red"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
