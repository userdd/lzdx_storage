<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout"/>

   <android.support.v4.widget.NestedScrollView
       android:layout_below="@+id/title_root"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:descendantFocusability="blocksDescendants">
           <LinearLayout
               android:gravity="center_vertical"
               android:layout_marginTop="@dimen/width_15"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_40"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="调研名称："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <EditText
                   android:id="@+id/et_name"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   style="@style/edit_background_style" />
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/width_0_5"
               android:background="@color/color_line"
               android:layout_margin="@dimen/width_5"/>
           <LinearLayout
               android:gravity="center_vertical"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_40"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="商家名称："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <EditText
                   android:id="@+id/et_shop_name"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   style="@style/edit_background_style"/>
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/width_0_5"
               android:background="@color/color_line"
               android:layout_margin="@dimen/width_5"/>
           <LinearLayout
               android:gravity="center_vertical"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_40"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="商品名称："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <EditText
                   android:id="@+id/et_goods_name"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   style="@style/edit_background_style"/>
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/width_0_5"
               android:background="@color/color_line"
               android:layout_margin="@dimen/width_5"/>
           <RelativeLayout
               android:gravity="center_vertical"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_80"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/tv_category"
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="货物类别："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <EditText
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_toRightOf="@+id/tv_category"
                   android:id="@+id/et_category"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   style="@style/edit_background_style" />

           </RelativeLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/width_0_5"
               android:background="@color/color_line"
               android:layout_margin="@dimen/width_5"/>
           <LinearLayout
               android:gravity="center_vertical"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_80"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="货物价格："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥："
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/color_333333"/>
               <EditText
                   android:id="@+id/et_price"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   style="@style/edit_background_style"/>
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/width_0_5"
               android:background="@color/color_line"
               android:layout_margin="@dimen/width_5"/>
           <RelativeLayout
               android:gravity="center_vertical"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_80"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/tv_unit"
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="货物类别："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <EditText
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_toRightOf="@+id/tv_unit"
                   android:id="@+id/et_unit"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   style="@style/edit_background_style" />
           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/width_0_5"
               android:background="@color/color_line"
               android:layout_margin="@dimen/width_5"/>
           <LinearLayout
               android:gravity="center_vertical"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_40"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="货物地点："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <EditText
                   android:id="@+id/et_address"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   style="@style/edit_background_style"/>
           </LinearLayout>

           <LinearLayout
               android:id="@+id/ll_pic"
               android:paddingLeft="@dimen/width_25"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/width_0_5"
                   android:background="@color/color_line"
                   android:layout_margin="@dimen/width_5"/>
               <TextView
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="调研照片："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <android.support.v7.widget.RecyclerView
                   android:layout_marginLeft="@dimen/width_35"
                   android:layout_marginRight="@dimen/width_35"
                   android:background="@drawable/shape_frame_tab"
                   android:id="@+id/recycler_view"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
           </LinearLayout>
           <View
               android:layout_marginTop="@dimen/width_10"
               android:layout_width="match_parent"
               android:layout_height="@dimen/width_0_5"
               android:background="@color/color_line"
               android:layout_margin="@dimen/width_5"/>
           <LinearLayout
               android:layout_marginBottom="@dimen/width_90"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_40"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="备注："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <EditText
                   android:id="@+id/et_remarks"
                   android:layout_marginLeft="@dimen/width_30"
                   android:padding="@dimen/width_10"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/width_80"
                   android:background="@drawable/shape_frame"
                   android:textCursorDrawable="@null"
                   android:textColor="@color/color_333333"
                   android:textSize="@dimen/textsize_12"
                   android:gravity="left"
                   android:enabled="false"/>
           </LinearLayout>
       </LinearLayout>
   </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
