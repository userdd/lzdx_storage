<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F3F3F3">
    <LinearLayout
        android:id="@+id/ll_top"
        android:paddingTop="@dimen/width_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_200"
        android:background="@drawable/shape_bevel_angle"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="@dimen/textsize_18"
            android:textColor="@color/color_white"/>
        <TextView
            android:layout_marginTop="@dimen/width_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="admin"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textsize_18"/>
        <TextView
            android:layout_marginTop="@dimen/width_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超级管理员"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textsize_14"/>
        <TextView
            android:layout_marginTop="@dimen/width_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建时间：2019-6-6"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textsize_14"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_exit"
        android:layout_marginTop="@dimen/width_15"
        android:layout_below="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="@dimen/width_10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_40"
            android:text="退出登录"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/textsize_14"
            android:background="@color/color_white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_light"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/width_10"/>
    </RelativeLayout>


</RelativeLayout>
