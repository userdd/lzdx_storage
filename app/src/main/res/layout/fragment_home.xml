<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F3F3F3">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_270"
                android:src="@drawable/shape_bevel_angle"/>

            <ImageView
                android:id="@+id/iv_image"
                android:layout_marginTop="@dimen/width_60"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_image"/>

            <RelativeLayout
                android:layout_marginBottom="@dimen/width_20"
                android:paddingTop="@dimen/width_15"
                android:layout_marginTop="@dimen/width_15"
                android:layout_marginLeft="@dimen/width_30"
                android:layout_marginRight="@dimen/width_30"
                android:layout_below="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_350"
                android:background="@mipmap/home_back">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
