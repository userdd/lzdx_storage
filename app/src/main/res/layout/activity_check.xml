<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/title_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/width_20"
                android:paddingLeft="@dimen/width_25"
                android:paddingRight="@dimen/width_40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="调研名称："
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/color_text_blue"/>

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/edit_background_style" />
            </LinearLayout>
            <View
                android:padding="@dimen/width_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_1"
                android:background="@color/color_line"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/width_25"
                android:paddingRight="@dimen/width_80"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_category"
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物类别："
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/color_text_blue"/>

                <EditText
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:layout_toRightOf="@+id/tv_category"
                    android:id="@+id/et_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/edit_background_style" />

            </RelativeLayout>
            <View
                android:padding="@dimen/width_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_1"
                android:background="@color/color_line"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/width_25"
                android:paddingRight="@dimen/width_40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="存储仓库："
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/color_text_blue"/>

                <EditText
                    android:id="@+id/et_store_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/edit_background_style"/>
            </LinearLayout>
            <View
                android:padding="@dimen/width_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_1"
                android:background="@color/color_line"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/width_25"
                android:paddingRight="@dimen/width_80"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物价格："
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/color_text_blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥："
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/color_333333"/>
                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/edit_background_style"/>
            </LinearLayout>
            <View
                android:padding="@dimen/width_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_1"
                android:background="@color/color_line"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/width_25"
                android:paddingRight="@dimen/width_80"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_stock"
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存剩余："
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/color_text_blue"/>

                <EditText
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:layout_toRightOf="@+id/tv_stock"
                    android:id="@+id/et_stock"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    style="@style/edit_background_style" />
                <TextView
                    android:paddingLeft="@dimen/width_10"
                    android:id="@+id/tv_surplus_unit"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/et_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textsize_12"/>
            </LinearLayout>
            <View
                android:padding="@dimen/width_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_1"
                android:background="@color/color_line"/>
            <LinearLayout
                android:layout_marginRight="@dimen/width_80"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/width_20"
                android:paddingLeft="@dimen/width_25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_check"
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="损耗："
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/color_text_blue"/>

                <EditText
                    android:layout_marginLeft="@dimen/width_30"
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:layout_toRightOf="@+id/tv_check"
                    android:id="@+id/et_check"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="请输入损耗数量"
                    android:inputType="number"
                    style="@style/edit_text_style" />
                <TextView
                    android:paddingLeft="@dimen/width_10"
                    android:id="@+id/tv_unit"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/et_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textsize_12" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/width_90"
                android:layout_marginTop="@dimen/width_20"
                android:paddingLeft="@dimen/width_25"
                android:paddingRight="@dimen/width_40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注："
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/color_text_blue"/>

                <EditText
                    android:id="@+id/et_remarks"
                    android:layout_marginLeft="@dimen/width_30"
                    android:padding="@dimen/width_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_80"
                    android:background="@drawable/shape_frame_gray"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textsize_12"
                    android:gravity="left"
                    android:hint="请输入备注信息"/>
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:background="@color/transparent"
                android:layout_marginBottom="@dimen/width_80"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_ensure"
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:paddingLeft="@dimen/width_15"
                    android:paddingRight="@dimen/width_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认修改"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/color_white"
                    android:background="@drawable/shape_frame_blue"/>
                <TextView
                    android:id="@+id/tv_back"
                    android:layout_marginLeft="@dimen/width_50"
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:paddingLeft="@dimen/width_30"
                    android:paddingRight="@dimen/width_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/color_white"
                    android:background="@drawable/shape_frame_red"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
