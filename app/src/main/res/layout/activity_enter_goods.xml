<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width_30"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_25"
                android:paddingRight="@dimen/width_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:text="库房："
                    android:textColor="@color/color_text_blue"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:layout_marginLeft="@dimen/width_15"
                    android:id="@+id/tv_name"
                    style="@style/text_name_styles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_frame_gray"
                    android:gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width_20"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_25"
                android:paddingRight="@dimen/width_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:text="名称："
                    android:textColor="@color/color_text_blue"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:layout_marginLeft="@dimen/width_15"
                    android:id="@+id/tv_goods"
                    style="@style/text_name_styles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_frame_gray"
                    android:gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width_20"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_25"
                android:paddingRight="@dimen/width_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:text="单位："
                    android:textColor="@color/color_text_blue"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:layout_marginLeft="@dimen/width_15"
                    android:id="@+id/tv_unit"
                    style="@style/text_name_styles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_frame_gray"
                    android:gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width_20"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_25"
                android:paddingRight="@dimen/width_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:text="类型："
                    android:textColor="@color/color_text_blue"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:layout_marginLeft="@dimen/width_15"
                    android:id="@+id/tv_category"
                    style="@style/text_name_styles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_frame_gray"
                    android:gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width_20"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_25"
                android:paddingRight="@dimen/width_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:text="数量："
                    android:textColor="@color/color_text_blue"
                    android:textSize="@dimen/textsize_14" />

                <EditText
                    android:id="@+id/et_number"
                    style="@style/edit_text_style"
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/width_15"
                    android:hint="请输入数量"
                    android:inputType="number"/>
                <TextView
                    android:id="@+id/tv_number_unit"
                    android:layout_marginLeft="@dimen/width_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/textsize_10"
                    android:textColor="@color/color_black"/>
                <TextView
                    android:id="@+id/tv_get_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_frame_blue"
                    android:text="获取"
                    android:paddingLeft="@dimen/width_10"
                    android:paddingRight="@dimen/width_10"
                    android:paddingTop="@dimen/width_5"
                    android:paddingBottom="@dimen/width_5"
                    android:layout_marginLeft="@dimen/width_5"
                    android:textColor="@color/color_white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width_20"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_25"
                android:paddingRight="@dimen/width_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:text="价格："
                    android:textColor="@color/color_text_blue"
                    android:textSize="@dimen/textsize_14" />

                <EditText
                    android:id="@+id/et_price"
                    style="@style/edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/width_15"
                    android:hint="请输入价格"
                    android:inputType="number"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width_20"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_25"
                android:paddingRight="@dimen/width_40">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/width_10"
                    android:paddingBottom="@dimen/width_10"
                    android:text="入库地点："
                    android:textColor="@color/color_text_blue"
                    android:textSize="@dimen/textsize_14" />

                <EditText
                    android:id="@+id/et_address"
                    style="@style/edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入地点"
                    android:enabled="false"/>
            </LinearLayout>

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_ensure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width_50"
                android:background="@drawable/shape_frame_blue"
                android:paddingLeft="@dimen/width_15"
                android:paddingTop="@dimen/width_10"
                android:paddingRight="@dimen/width_15"
                android:paddingBottom="@dimen/width_10"
                android:text="确认入库"
                android:textColor="@color/color_white"
                android:textSize="@dimen/textsize_14" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
