<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout"/>

   <android.support.v4.widget.NestedScrollView
       android:layout_below="@+id/title_root"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <LinearLayout
               android:gravity="center_vertical"
               android:layout_marginTop="@dimen/width_30"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_40"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="调研名称："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <EditText
                   android:id="@+id/et_name"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="请输入调研名称"
                   style="@style/edit_text_style" />
           </LinearLayout>
           <LinearLayout
               android:gravity="center_vertical"
               android:layout_marginTop="@dimen/width_20"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_40"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="商家名称："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <EditText
                   android:id="@+id/et_shop_name"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="请输入商家名称"
                   style="@style/edit_text_style"/>
           </LinearLayout>
           <LinearLayout
               android:gravity="center_vertical"
               android:layout_marginTop="@dimen/width_20"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_40"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="商品名称："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <EditText
                   android:id="@+id/et_goods_name"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="请输入商品名称"
                   style="@style/edit_text_style"/>
           </LinearLayout>
           <RelativeLayout
               android:gravity="center_vertical"
               android:layout_marginTop="@dimen/width_20"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_80"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/tv_category"
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="货物类别："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <EditText
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_toRightOf="@+id/tv_category"
                   android:id="@+id/et_category"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="请选择货物类别"
                   style="@style/edit_text_style"
                   android:focusable="false"/>
               <ImageView
                   android:layout_centerVertical="true"
                   android:padding="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/bottom"
                   android:layout_alignParentRight="true"/>
           </RelativeLayout>

           <LinearLayout
               android:gravity="center_vertical"
               android:layout_marginTop="@dimen/width_20"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_80"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="货物价格："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥："
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/color_333333"/>
               <EditText
                   android:id="@+id/et_price"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="请输入货物价格"
                   style="@style/edit_text_style"
                   android:inputType="number"/>
           </LinearLayout>
           <RelativeLayout
               android:gravity="center_vertical"
               android:layout_marginTop="@dimen/width_20"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_80"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/tv_unit"
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="货物单位："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <EditText
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_toRightOf="@+id/tv_unit"
                   android:id="@+id/et_unit"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="请选择货物类别"
                   style="@style/edit_text_style"
                   android:focusable="false"/>
               <ImageView
                   android:layout_centerVertical="true"
                   android:padding="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/bottom"
                   android:layout_alignParentRight="true"/>
           </RelativeLayout>
           <LinearLayout
               android:gravity="center_vertical"
               android:layout_marginTop="@dimen/width_20"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_40"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="货物地点："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <EditText
                   android:id="@+id/et_address"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="请输入地点"
                   style="@style/edit_text_style"/>
           </LinearLayout>
           <LinearLayout
               android:paddingLeft="@dimen/width_25"
               android:gravity="center_vertical"
               android:layout_marginTop="@dimen/width_20"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:paddingTop="@dimen/width_10"
                   android:paddingBottom="@dimen/width_10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="添加照片："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <android.support.v7.widget.RecyclerView
                   android:layout_marginLeft="@dimen/width_35"
                   android:layout_marginRight="@dimen/width_35"
                   android:background="@drawable/shape_frame_tab"
                   android:id="@+id/recyclerView"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
           </LinearLayout>
           <LinearLayout
               android:layout_marginBottom="@dimen/width_150"
               android:layout_marginTop="@dimen/width_20"
               android:paddingLeft="@dimen/width_25"
               android:paddingRight="@dimen/width_40"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="备注："
                   android:textSize="@dimen/textsize_14"
                   android:textColor="@color/color_text_blue"/>

               <EditText
                   android:id="@+id/et_remarks"
                   android:layout_marginLeft="@dimen/width_30"
                   android:padding="@dimen/width_10"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/width_80"
                   android:hint="例：xxxxx"
                   android:background="@drawable/shape_frame_gray"
                   android:textCursorDrawable="@null"
                   android:textColor="@color/color_333333"
                   android:textSize="@dimen/textsize_12"
                   android:gravity="left" />
           </LinearLayout>
       </LinearLayout>
   </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:layout_marginBottom="@dimen/width_30"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_ensure"
            android:paddingTop="@dimen/width_10"
            android:paddingBottom="@dimen/width_10"
            android:paddingLeft="@dimen/width_15"
            android:paddingRight="@dimen/width_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认添加"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/color_white"
            android:background="@drawable/shape_frame_blue"/>
        <TextView
            android:id="@+id/tv_back"
            android:layout_marginLeft="@dimen/width_50"
            android:paddingTop="@dimen/width_10"
            android:paddingBottom="@dimen/width_10"
            android:paddingLeft="@dimen/width_30"
            android:paddingRight="@dimen/width_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/color_white"
            android:background="@drawable/shape_frame_red"/>
    </LinearLayout>
</RelativeLayout>
